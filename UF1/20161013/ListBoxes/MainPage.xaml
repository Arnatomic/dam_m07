<Page
    x:Class="ListBoxes.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ListBoxes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <DataTemplate x:Key="DataTemplateItems">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{Binding Nom}"/>
                <TextBlock Text="{Binding Poblacio}"/>
            </StackPanel>
        </DataTemplate>
        <ItemsPanelTemplate x:Key="ItemsPanelTemplateProvincies">
            <ItemsStackPanel Orientation="Horizontal" />
        </ItemsPanelTemplate>
    </Page.Resources>


    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ListView x:Name="listView" 
                  HorizontalAlignment="Stretch" 
                  Height="100" Margin="10,10,0,0" 
                  VerticalAlignment="Top" 
                  ItemTemplate="{StaticResource DataTemplateItems}" ItemsPanel="{StaticResource ItemsPanelTemplateProvincies}" 
                     />

    </Grid>
</Page>
